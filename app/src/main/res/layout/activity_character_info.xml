<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Nome do personagem -->
    <TextView
        android:id="@+id/characterNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Personagem"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Raça do personagem -->
    <TextView
        android:id="@+id/raceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raça: Humano"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Classe do personagem -->
    <TextView
        android:id="@+id/classTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classe: Guerreiro"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Força do personagem -->
    <TextView
        android:id="@+id/strengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Força: 8"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Destreza do personagem -->
    <TextView
        android:id="@+id/dexterityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destreza: 8"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Constituição do personagem -->
    <TextView
        android:id="@+id/constitutionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constituição: 8"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Inteligência do personagem -->
    <TextView
        android:id="@+id/intelligenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inteligência: 8"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Sabedoria do personagem -->
    <TextView
        android:id="@+id/wisdomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sabedoria: 8"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Carisma do personagem -->
    <TextView
        android:id="@+id/charismaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carisma: 8"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Botão para criar um novo personagem -->
    <Button
        android:id="@+id/createNewCharacterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar Novo Personagem"
        android:textSize="18sp"
        android:layout_marginTop="24dp" />

</LinearLayout>