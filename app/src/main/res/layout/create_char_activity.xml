<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Campo para inserir o nome do personagem -->
        <EditText
            android:id="@+id/charName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insira o nome do personagem"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="22sp" />

        <!-- Título da lista de raças -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione uma raça"
            android:textSize="22sp"
            android:layout_marginTop="30dp" />

        <!-- Grupo de seleção de raças -->
        <RadioGroup
            android:id="@+id/raceGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/radioDwarf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anão"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioElf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elfo"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioHuman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humano"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioHalfling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halfling"
                android:textSize="20sp" />
        </RadioGroup>

        <!-- Título da lista de classes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione uma classe"
            android:textSize="22sp"
            android:layout_marginTop="30dp" />

        <!-- Grupo de seleção de classes -->
        <RadioGroup
            android:id="@+id/classGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/radioWarrior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guerreiro"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioMage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mago"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioRogue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ladino"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioCleric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clérigo"
                android:textSize="20sp" />
        </RadioGroup>

        <!-- Botão Criar Personagem -->
        <Button
            android:id="@+id/createCharacterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#5FBF3B"
            android:padding="20dp"
            android:text="Criar Personagem"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>
