<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Campo para inserir o nome do personagem -->
        <EditText
            android:id="@+id/charName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insira o nome do personagem"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="22sp" />

        <!-- Seletor de sexo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            android:textSize="22sp"
            android:layout_marginTop="30dp" />

        <RadioGroup
            android:id="@+id/genderGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textSize="22sp" />
        </RadioGroup>

        <!-- Título da lista de raças -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione uma raça"
            android:textSize="22sp"
            android:layout_marginTop="30dp" />

        <!-- Lista de raças -->
        <CheckBox
            android:id="@+id/raceDwarf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anão"
            android:textSize="20sp"
            android:layout_marginTop="15dp" />

        <CheckBox
            android:id="@+id/raceElf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elfo"
            android:textSize="20sp"
            android:layout_marginTop="15dp" />

        <CheckBox
            android:id="@+id/raceHuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humano"
            android:textSize="20sp"
            android:layout_marginTop="15dp" />

        <CheckBox
            android:id="@+id/raceHalfling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halfling"
            android:textSize="20sp"
            android:layout_marginTop="15dp" />

        <!-- Título da lista de classes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione uma classe"
            android:textSize="22sp"
            android:layout_marginTop="30dp" />

        <!-- Lista de classes -->
        <CheckBox
            android:id="@+id/classWarrior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guerreiro"
            android:textSize="20sp"
            android:layout_marginTop="15dp" />

        <CheckBox
            android:id="@+id/classMage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mago"
            android:textSize="20sp"
            android:layout_marginTop="15dp" />

        <CheckBox
            android:id="@+id/classRogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ladino"
            android:textSize="20sp"
            android:layout_marginTop="15dp" />

        <CheckBox
            android:id="@+id/classCleric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clérigo"
            android:textSize="20sp"
            android:layout_marginTop="15dp" />

        <!-- Botão Próxima Página -->
        <Button
            android:id="@+id/distributeAttribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#5FBF3B"
            android:padding="20dp"
            android:text="Próxima página"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>
